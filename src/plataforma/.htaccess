# /src/plataforma/.htaccess
RewriteEngine On
RewriteBase /src/plataforma/

Options -Indexes

# Si es un archivo físico o un directorio, NO reescribas
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Todo lo demás al front controller
RewriteRule ^ index.php [QSA,L]
